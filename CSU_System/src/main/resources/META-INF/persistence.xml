<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://xmlns.jcp.org/xml/ns/persistence"
             version="2.1">

    <persistence-unit name="CSU_SystemPU">
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>

        <class>models.people.Person</class>
        <class>models.people.User</class>
        <class>models.people.HealthStaff</class>
        <class>models.people.Surveyor</class>
        <class>models.people.Admin</class>
        <class>models.people.SocialOrgRepresentative</class>

        <class>models.Report</class>
        <class>models.Zone</class>
        <class>models.Neighborhood</class>
        <class>models.Organization</class>
        <class>models.Coordinate</class>
        <class>models.ReportRequest</class>

        <class>models.survey.Survey</class>
        <class>models.survey.Question</class>
        <class>models.survey.Answer</class>
        <class>models.survey.QuestionAnswer</class>

        <class>models.Campaign</class>
        <class>models.Event</class>

        <properties>
            <property name="hibernate.connection.driver_class" value="com.mysql.cj.jdbc.Driver"/>
            <property name="jakarta.persistence.jdbc.url" value=""/>
            <property name="jakarta.persistence.jdbc.user" value=""/>
            <property name="jakarta.persistence.jdbc.password" value=""/>
            <property name="hibernate.hbm2ddl.auto" value="update"/>
        </properties>

    </persistence-unit>
</persistence>
